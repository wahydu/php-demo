<phpunit
  backupGlobals="false"
  backupStaticAttributes="false"
  syntaxCheck="false"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
>
  <filter>
    <whitelist>
      <directory suffix=".php">../src/mg/App</directory>
    </whitelist>
  </filter>
  <testsuites>
    <testsuite name="App">
      <directory suffix=".php">App</directory>
    </testsuite>
  </testsuites>
</phpunit>
